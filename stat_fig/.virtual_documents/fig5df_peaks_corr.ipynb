plt.plot(stimonset[0], stimonset[1], 'k^', alpha=1, label='Stim Onset', markerfacecolor='gray', markersize=trianglesize, zorder=1)
sns.scatterplot(data=dat, x='xpeak', y='ypeak', hue='group', alpha=0.9, palette=colorpalette, 
                s=dotsize)
